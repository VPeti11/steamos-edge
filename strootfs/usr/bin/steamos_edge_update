if [[ $EUID -ne 0 ]]; then
    echo "This script must be run as root. Use sudo!"
    exit 1
fi
mkdir -p /tmp/updating/
cd /tmp/updating/
git clone https://gitlab.com/edgedev1/steamos-edge
cd steamos-edge
cp -r strootfs/* /
echo "Updated / directory"
