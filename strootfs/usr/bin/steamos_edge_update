if [[ $EUID -ne 0 ]]; then
    echo "This script must be run as root. Use sudo!"
    exit 1
fi
mkdir -p /tmp/updating/
cd /tmp/updating/
git clone https://gitlab.com/edgedev1/steamos-edge
cd steamos-edge
cp -r strootfs/* /
echo "Updated / directory"
# Thanks Quota!
# https://discord.com/channels/1338559346853810238/1338559346853810241/1338995791443918908
pacman -Syu $(cat packages.x86_64) --needed --noconfirm
echo "Installed packages"
cd /
rm -rf /tmp/updating/*
exit -1